{
  "private": false,
  "name": "rest-php-client",
  "version": "1.2",
  "description": "An object oriented framework for interacting with Sugar 7's REST API.",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "phpunit || true",
    "coverage": "phpunit --coverage-html=coverage || true",
    "doc": "phpdoc -d ./src -t ./doc/ || true",
    "quality": "phpcs --standard=./ruleset.xml src/ || true",
    "all": "npm run coverage && npm run doc && npm run quality"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sugarcrm/rest-php-client"
  },
  "bugs": {
    "url": "https://github.com/sugarcrm/rest-php-client/issues"
  },
  "homepage": "https://github.com/sugarcrm/rest-php-client"
}
